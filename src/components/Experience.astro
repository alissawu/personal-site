---

<section id="experience" class="experience-section">
 <div class="section-header">
   <h2 class="section-title">
     <span class="title-prefix">&gt;</span> 02 // WORK_EXPERIENCE
   </h2>
   <div class="title-line"></div>
 </div>

 <div class="timeline">
   {experiences.map((exp, index) => (
     <div class="timeline-item">
       <div class="timeline-marker"></div>
       <div class="experience-card">
         <div class="exp-header">
           <div>
             <h3 class="company">{exp.company}</h3>
             <p class="role">{exp.role}</p>
           </div>
           <span class="period">{exp.period}</span>
         </div>
         
         <div class="tech-stack">
           {exp.tech.map(tech => (
             <span class="tech-tag">{tech}</span>
           ))}
         </div>
         
         <ul class="bullets">
           {exp.bullets.map(bullet => (
             <li>{bullet}</li>
           ))}
         </ul>
       </div>
     </div>
   ))}
 </div>
</section>

<style>
 .experience-section {
   padding: 4rem 0;
   position: relative;
   z-index: 10;
 }

 .section-header {
   display: flex;
   align-items: center;
   gap: 1rem;
   margin-bottom: 3rem;
 }

 .section-title {
   font-family: 'Orbitron', sans-serif;
   font-size: 2rem;
   font-weight: 700;
   color: #e0e0e0;
   margin: 0;
   display: flex;
   align-items: center;
   gap: 0.5rem;
 }

 .title-prefix {
   color: var(--cyber-green);
   opacity: 0.5;
 }

 .title-line {
   flex: 1;
   height: 1px;
   background: #333;
 }

 .timeline {
   position: relative;
   padding-left: 2rem;
 }

 .timeline::before {
   content: '';
   position: absolute;
   left: 0;
   top: 0;
   bottom: 0;
   width: 1px;
   background: #333;
 }

 .timeline-item {
   position: relative;
   margin-bottom: 2rem;
 }

 .timeline-marker {
   position: absolute;
   left: -2rem;
   top: 0.5rem;
   width: 9px;
   height: 9px;
   background: var(--cyber-green);
   border-radius: 50%;
 }

 .experience-card {
   background: #111;
   border: 1px solid #222;
   padding: 1.5rem;
   margin-left: 1rem;
 }

 .exp-header {
   display: flex;
   justify-content: space-between;
   align-items: flex-start;
   margin-bottom: 1rem;
 }

 .company {
   font-size: 1.25rem;
   font-weight: 700;
   color: #e0e0e0;
   margin: 0 0 0.25rem 0;
 }

 .role {
   color: var(--cyber-green);
   margin: 0;
   font-size: 0.875rem;
 }

 .period {
   color: #666;
   font-size: 0.75rem;
   letter-spacing: 0.05em;
 }

 .tech-stack {
   display: flex;
   flex-wrap: wrap;
   gap: 0.5rem;
   margin-bottom: 1rem;
 }

 .tech-tag {
   font-size: 0.75rem;
   color: #666;
   padding: 0.25rem 0.5rem;
   background: #1a1a1a;
   border: 1px solid #333;
 }

 .bullets {
   list-style: none;
   padding: 0;
   margin: 0;
 }

 .bullets li {
   color: #999;
   font-size: 0.875rem;
   line-height: 1.6;
   margin-bottom: 0.5rem;
   padding-left: 1rem;
   position: relative;
 }

 .bullets li::before {
   content: 'â–¸';
   position: absolute;
   left: 0;
   color: var(--cyber-blue);
 }

 @media (max-width: 768px) {
   .timeline {
     padding-left: 1rem;
   }
   
   .exp-header {
     flex-direction: column;
     gap: 0.5rem;
   }
 }
</style>